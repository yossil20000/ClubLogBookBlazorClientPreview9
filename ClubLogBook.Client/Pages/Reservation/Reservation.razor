@page "/Reservation/Reservation"
@using ClubLogBook.Application.Models
@using ClubLogBook.Shared
@using Microsoft.AspNetCore.Components
@using NodaTime    
    <div class="form-group">

        @*<label for="Id" class="control-label">Id</label>*@
        <div class="alert @StatusClass">@StatusMessage</div>
        <label for="DateFrom" class="control-label">From</label><br />

        <div class="col pr-0">
            <div class="form-control d-flex">
                <div><i>🗓</i>&nbsp;&nbsp;Date:</div>
                <input type="date" @bind="Item.DateFrom" @bind:format="yyyy-MM-dd" />
                <div><i>🗓</i>&nbsp;&nbsp;Time:</div>
                <input type="time" @bind="Item.DateFrom" format-value="HH:mm" />

            </div>
